{% extends 'theme::layouts/default' %}

{% block content %}

    <div class="ui horizontal segment">
        <div class="ui segment">
            <div class="ui grid">
                <div class="three wide column">
                    <div class="ui fluid vertical menu">
                        <div class="header item">Groups</div>
                        {% for group in groups %}
                            <a href="{{ route('admin.navigation.links', {group: group.slug}) }}" class="{% if currentGroup.slug == group.slug %} active {% endif %} item">
                                {{ group.title }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
                <div class="thirteen wide column">
                    <ol class="sortable ui fluid vertical menu landing">
                        <div class="header item">
                            <div class="ui breadcrumb">
                                <a class="section">Links</a>
                                <i class="right chevron icon divider"></i>
                                <div class="active section">Two</div>
                            </div>
                        </div>
                        {% if links %}
                            {% for link in links %}
                                <li class="item"><i class="js-handle fa fa-bars"></i>
                                    {{ link.title }}
                                </li>
                            {% endfor %}
                        {% endif %}
                        <li class="item"><i class="js-handle fa fa-bars"></i>
                            One
                            <ol class="landing"></ol>
                        </li>
                        <li class="item">
                            <i class="js-handle fa fa-bars"></i>
                            Two
                            <ol>
                                <li class="item"><i class="js-handle fa fa-bars"></i> One {#<a class="ui " href="#"><i class="icon pencil"></i> Edit</a>#}<ol class="landing"></ol></li>
                                <li class="item"><i class="js-handle fa fa-bars"></i> Two <ol class="landing"></ol></li>
                                <li class="item"><i class="js-handle fa fa-bars"></i> Three <ol class="landing"></ol></li>
                            </ol>
                        </li>
                        <li>
                            <i class="js-handle fa fa-bars"></i>
                            Three
                            <ol class="landing"></ol>
                        </li>
                    </ol>
                </div>
            </div>

        </div>
    </div>

    <style>
        .sortable {
            padding: 0;
        }

        .sortable ul {
            padding-left: 10px;
            padding-top: 10px;
        }
        .sortable li i {
            margin: 0em 0.25rem 0em;
        }

/*        .sortable ol.landing, .sortable ul.landing {
            padding: 0;
        }*/

        .sortable li {
            display: block;
        }

        body.dragging, body.dragging * {
            cursor: move !important;
        }

        li.dragged {
            position: absolute !important;
            top: 0;
            left: 0;
            opacity: 0.5;
            z-index: 2000;
        }

        .sortable li.placeholder {
            position: relative;
        }

        .sortable li.placeholder:before {
            content: " ";
            position: absolute;
            width: 0;
            height: 0;
            border: 5px solid transparent;
            border-top-color: red;
            top: -6px;
            margin-left: -5px;
            border-bottom: none;
        }

        .sortable .dropdown-menu li.placeholder:before {
            border: 5px solid transparent;
            border-left-color: red;
            margin-top: -5px;
            margin-left: 0;
            top: 0;
            left: 10px;
            border-right: none;
        }
    </style>

    <script>
        $(document).ready(function () {
            var list = $('.sortable');
            list.sortable({
                'handle': '.js-handle'
            });
        });
    </script>

{% endblock %}


